{
  "builders": [
    {
      "type": "arm-image",
      "iso_url": "/vagrant/tmp/raspbian-lite.zip",
      "iso_checksum_type": "none"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "/root/.ssh/id_rsa.pub",
      "destination": "/tmp/authorized_keys"
    },
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ]
}